<controls:MetroWindow x:Class="Sdk.Extras.WpfApp.Views.Facturas.DetallesFacturaView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:facturas="clr-namespace:Sdk.Extras.WpfApp.ViewModels.Facturas"
                      mc:Ignorable="d"
                      Title="{Binding Title}"
                      WindowStartupLocation="CenterScreen"
                      Width="1300"
                      Height="800"
                      d:DataContext="{d:DesignInstance d:Type=facturas:DetallesFacturaViewModel, IsDesignTimeCreatable=True}"
                      dialog:DialogParticipation.Register="{Binding}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="{Binding Title, Mode=OneWay}"
                   FontWeight="Bold"
                   FontSize="20"
                   VerticalAlignment="Center"
                   Margin="5" />
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <Button Content="Guardar"
                    Command="{Binding GuardarDocumentoCommand}"
                    Width="150"
                    VerticalAlignment="Center"
                    Margin="5"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Button Content="Timbrar"
                    Command="{Binding TimbrarDocumentoCommand}"
                    Width="150"
                    VerticalAlignment="Center"
                    Margin="5"
                    Style="{StaticResource MahApps.Styles.Button.Square}" />
            <Button Content="Generar PDF"
                    Command="{Binding GenerarPdfDocumentoCommand}"
                    Width="150"
                    VerticalAlignment="Center"
                    Margin="5"
                    Style="{StaticResource MahApps.Styles.Button.Square}" />
            <Button Content="Generar XML"
                    Command="{Binding GenerarXmlDocumentoCommand}"
                    Width="150"
                    VerticalAlignment="Center"
                    Margin="5"
                    Style="{StaticResource MahApps.Styles.Button.Square}" />
            <controls:DropDownButton Content="Cancelar"
                                     Width="150"
                                     VerticalAlignment="Center"
                                     Margin="5">
                <controls:DropDownButton.Items>
                    <MenuItem Header="Cancelar"
                              Command="{Binding CancelarDocumentoCommand}" />
                    <MenuItem Header="Cancelar Administrativamente"
                              Command="{Binding CancelarDocumentoAdministrativamenteCommand}" />
                </controls:DropDownButton.Items>
            </controls:DropDownButton>
            <Button Content="Eliminar"
                    Command="{Binding EliminarDocumentoCommand}"
                    Width="150"
                    VerticalAlignment="Center"
                    Margin="5"
                    Style="{StaticResource MahApps.Styles.Button.Square}" />
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Content="Concepto:"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="0"
                     Text="{Binding Factura.ConceptoDocumento.CNOMBRECONCEPTO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
            <Label Grid.Row="0"
                   Grid.Column="1"
                   Content="Fecha:"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding Factura.CFECHA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
            <Label Grid.Row="0"
                   Grid.Column="2"
                   Content="Serie:"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="2"
                     Text="{Binding Factura.CSERIEDOCUMENTO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
            <Label Grid.Row="0"
                   Grid.Column="3"
                   Content="Folio:"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="3"
                     Text="{Binding Factura.CFOLIO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
            <Label Grid.Row="0"
                   Grid.Column="4"
                   Content="Cliente:"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5" />
            <TextBox Grid.Row="1"
                     Grid.Column="4"
                     Text="{Binding Factura.ClienteProveedor.CCODIGOCLIENTE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
            <TextBox Grid.Row="2"
                     Grid.Column="4"
                     Text="{Binding Factura.ClienteProveedor.CRAZONSOCIAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
            <Label Grid.Row="2"
                   Grid.Column="0"
                   Content="Moneda:"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Text="{Binding Factura.CIDMONEDA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
            <Label Grid.Row="2"
                   Grid.Column="2"
                   Content="Tipo De Cambio:"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="5" />
            <TextBox Grid.Row="2"
                     Grid.Column="3"
                     Text="{Binding Factura.CTIPOCAMBIO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Margin="5"
                     IsReadOnly="True" />
        </Grid>
        <controls:MetroAnimatedSingleRowTabControl Grid.Row="3">
            <TabItem Header="Movimientos">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                        <Button Content="Crear"
                                Command="{Binding CrearMovimientoCommand}"
                                VerticalAlignment="Center"
                                Margin="5"
                                Width="150"
                                Style="{StaticResource MahApps.Styles.Button.Square}" />
                        <Button Content="Editar"
                                Command="{Binding EditarMovimientoCommand}"
                                VerticalAlignment="Center"
                                Margin="5"
                                Width="150"
                                Style="{StaticResource MahApps.Styles.Button.Square}" />
                        <Button Content="Eliminar"
                                Command="{Binding EliminarMovimientoCommand}"
                                VerticalAlignment="Center"
                                Margin="5"
                                Width="150"
                                Style="{StaticResource MahApps.Styles.Button.Square}" />
                    </StackPanel>
                    <!-- ReSharper disable Xaml.BindingWithContextNotResolved -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Factura.Movimientos}"
                              SelectedItem="{Binding MovimientoSeleccionado}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Consecutivo"
                                                Binding="{Binding CNUMEROMOVIMIENTO}" />
                            <DataGridTextColumn Header="Producto Codigo"
                                                Binding="{Binding Producto.CCODIGOPRODUCTO}" />
                            <DataGridTextColumn Header="Producto Nombre"
                                                Binding="{Binding Producto.CNOMBREPRODUCTO}" />
                            <DataGridTextColumn Header="Unidades"
                                                Binding="{Binding CUNIDADES}" />
                            <DataGridTextColumn Header="Precio"
                                                Binding="{Binding CPRECIO, StringFormat=\{0:C\}}" />
                            <DataGridTextColumn Header="Total"
                                                Binding="{Binding CTOTAL, StringFormat=\{0:C\}}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- ReSharper restore Xaml.BindingWithContextNotResolved -->
                </Grid>
            </TabItem>
            <TabItem Header="Generales">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Razon Social:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.ClienteProveedor.CRAZONSOCIAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="300"
                                VerticalAlignment="Center"
                                Margin="5"
                                IsReadOnly="True" />
                            <Label Content="RFC:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.ClienteProveedor.CRFC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5"
                                IsReadOnly="True" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Fecha Vencimiento:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <DatePicker
                                SelectedDate="{Binding Factura.CFECHAVENCIMIENTO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Fecha Entrega:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <DatePicker
                                SelectedDate="{Binding Factura.CFECHAENTREGARECEPCION, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Agente:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.Agente.CCODIGOAGENTE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5"
                                IsReadOnly="True" />
                            <TextBox
                                Text="{Binding Factura.Agente.CNOMBREAGENTE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5"
                                IsReadOnly="True" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Direccion Fisal:"
                                   FontWeight="Bold"
                                   FontSize="15"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Pais:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CPAIS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5" />
                            <Label Content="Codigo Postal:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CCODIGOPOSTAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Estado:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CESTADO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5" />
                            <Label Content="Ciudad:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CCIUDAD, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Colonia:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CCOLONIA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="300"
                                VerticalAlignment="Center"
                                Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Calle:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CNOMBRECALLE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="300"
                                VerticalAlignment="Center"
                                Margin="5" />
                            <Label Content="Numero Exterior:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CNUMEROEXTERIOR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="100"
                                VerticalAlignment="Center"
                                Margin="5" />
                            <Label Content="Numero Interior:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CNUMEROINTERIOR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="100"
                                VerticalAlignment="Center"
                                Margin="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Telefono:"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="5" />
                            <TextBox
                                Text="{Binding Factura.DireccionFiscal.CTELEFONO1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Margin="5" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Informacion Adicional">
                <StackPanel>
                    <TextBlock Text="Anexo 20 v 3.3:"
                               FontWeight="Bold"
                               FontSize="15"
                               VerticalAlignment="Center"
                               Margin="5" />
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Lugar De Expedicion:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CLUGAREXPE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="200"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Forma De Pago:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CMETODOPAG, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="200"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Metodo De Pago:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CCANTPARCI, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="200"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Condiciones De Pago:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CCONDIPAGO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="200"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                    </StackPanel>
                    <TextBlock Text="Referencia Y Observaciones"
                               FontWeight="Bold"
                               FontSize="15"
                               VerticalAlignment="Center"
                               Margin="5" />
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Referencia:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CREFERENCIA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="200"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Observaciones:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.COBSERVACIONES, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="500"
                            VerticalAlignment="Center"
                            Margin="5"
                            AcceptsReturn="True"
                            AcceptsTab="True"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Usuario">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Texto Extra 1:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.CTEXTOEXTRA1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Texto Extra 2:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.CTEXTOEXTRA2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Texto Extra 3:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.CTEXTOEXTRA3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Envio">
                <StackPanel>
                    <TextBlock Text="Datos Envio:"
                               FontWeight="Bold"
                               FontSize="15"
                               VerticalAlignment="Center"
                               Margin="5" />
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Destinatario:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.CDESTINATARIO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="300"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Numero Guia:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CNUMEROGUIA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="300"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Nombre Mensajeria:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CMENSAJERIA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="200"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                        <Label Content="Cuenta Mensajeria:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.CCUENTAMENSAJERIA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Numero De Cajas:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.CNUMEROCAJAS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                        <Label Content="Peso Envio:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox Text="{Binding Factura.CPESO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 MinWidth="200"
                                 VerticalAlignment="Center"
                                 Margin="5" />
                    </StackPanel>
                    <TextBlock Text="Direccion Envio:"
                               FontWeight="Bold"
                               FontSize="15"
                               VerticalAlignment="Center"
                               Margin="5" />
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Pais:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CPAIS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                        <Label Content="Codigo Postal:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CCODIGOPOSTAL, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Estado:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CESTADO, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                        <Label Content="Ciudad:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CCIUDAD, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Colonia:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CCOLONIA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="300"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Calle:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CNOMBRECALLE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="300"
                            VerticalAlignment="Center"
                            Margin="5" />
                        <Label Content="Numero Exterior:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CNUMEROEXTERIOR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Margin="5" />
                        <Label Content="Numero Interior:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CNUMEROINTERIOR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Telefono:"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5" />
                        <TextBox
                            Text="{Binding Factura.DireccionEnvio.CTELEFONO1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            MinWidth="200"
                            VerticalAlignment="Center"
                            Margin="5" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Datos CFDI">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                        <Button Content="Buscar Datos"
                                Command="{Binding BuscarDatosCfdiCommand}"
                                Width="150"
                                VerticalAlignment="Center"
                                Margin="5"
                                Style="{StaticResource MahApps.Styles.Button.Square}" />
                    </StackPanel>
                    <ScrollViewer Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
